<section class='section-highlight'>
  <h1>{{entity.name}} Overview</h1>
</section>


<div class="panel m-md-a">

  <div class="panel-body">
    <div class= "health-tiles-container">
      <div class="summary-cards">
        {{#summary-card
          classNames='totals'
          headerText='Total Raised'
          icon='fa-usd'
          total=entity.total_raised as |showing|}}
          {{#link-to "campaigns.donations"}}
          View more
          <i class="fa fa-chevron-right"></i>
          {{/link-to}}
        {{/summary-card}}

        {{#summary-card
          classNames='percentage'
          headerText='Email Deliverablity'
          icon='fa-percent'
          total='98' as |showing|}}
          {{#link-to "campaigns.stats"}}
            View More
            <i class="fa fa-chevron-right"></i>
          {{/link-to}}
        {{/summary-card}}

        {{#summary-card
          classNames='emails'
          headerText='Emails Sent'
          icon='fa-envelope'
          total=entity.emails_sent as |showing|}}
          {{#link-to "campaigns.stats"}}
            View More
            <i class="fa fa-chevron-right"></i>
          {{/link-to}}
        {{/summary-card}}
      </div>
      {{campaign-quick-stats
        gifts=(shorthand-number entity.total_donations_count)
        donors=(shorthand-number entity.total_donors)
        interactions=(shorthand-number entity.page_interactions)
      }}
    </div>
  </div>
</div>

<div class="m-md-a">
  <h2>Active Campaigns</h2>
  <div class="panel">
    <div class="panel-body">
      {{campaigns-table campaigns=campaigns}}
    </div>
  </div>
</div>
